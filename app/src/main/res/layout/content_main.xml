<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nick.shippyshop.Main_view"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:background="#0000">
                <ViewFlipper
                    android:layout_width="fill_parent"
                    android:layout_height="221dp"
                    android:id="@+id/vFlipper1"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView"
                        android:src="@drawable/laptops" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView1"
                        android:src="@drawable/phonesim" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView3"
                        android:src="@drawable/sportsit" />




                </ViewFlipper>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="376dp"
                android:layout_height="157dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView6"
                    android:src="@drawable/clothess"
                    android:layout_weight="0.18" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView7"
                    android:layout_weight="0.47"
                    android:src="@drawable/automobile" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView8"
                    android:layout_weight="0.18"
                    android:src="@drawable/allcatag" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="184dp"
                    android:layout_height="133dp"
                    android:id="@+id/imageView9"
                    android:src="@drawable/popular"
                    android:clickable="false" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="129dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/newdd" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


